    <script id="tailwind-config">
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        "primary": "#FF6B8B", 
                        "primary-hover": "#FF8FAB", 
                        "bg-main": "#FDFCFE", 
                        "bg-card": "#FFFFFF", 
                        "bg-card-hover": "#FFF5F7",
