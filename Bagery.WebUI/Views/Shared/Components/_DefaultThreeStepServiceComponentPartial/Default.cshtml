@using Bagery.Business.Features.ThreeStepServices.Queries.GetThreeStepServiceList
@model List<GetThreeStepServiceListQueryResult>

<section class="feature-section">
    <div class="auto-container">
        <div class="row clearfix">

            @{
                int count = 0;
            }
            @foreach (var item in Model)
            {
                count++;
                // Sayýyý 01, 02 formatýna çeviriyoruz
                string stepNumber = count.ToString("00");

                // IconUrl varsa onu kullan, yoksa varsayýlan arkaplaný kullan
                string bgImage = !string.IsNullOrEmpty(item.IconUrl) ? item.IconUrl : "/Bagery/assets/images/icons/icon-bg-2.png";

                <div class="col-lg-4 col-md-6 col-sm-12 feature-block">
                    <div class="feature-block-one wow fadeInUp animated animated" data-wow-delay="00ms" data-wow-duration="1500ms">
                        <div class="inner-box">
                            <div class="count-box" style="background-image: url(@bgImage);">
                                <h4>@stepNumber</h4>
                            </div>
                            <div class="inner">
                                <h4>@item.Title</h4>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>