@using Bagery.Business.Features.Products.Queries.GetProductList
@model List<GetProductListQueryResult>

<section class="shop-section" style="background-image: url(/Bagery/assets/images/background/shop-1.jpg);">
    <div class="auto-container">
        <div class="sec-title">
            <p>Our Shop</p>
            <h2>Our all Delicious <br />Products.</h2>
        </div>
        <div class="four-item-carousel owl-carousel owl-theme owl-dots-none nav-style-one">

            @foreach (var item in Model)
            {
                var coverImage = item.ProductImages?.FirstOrDefault()?.ImageUrl ?? "/Bagery/assets/images/resource/shop/shop-1.jpg";

                <div class="shop-block-one">
                    <div class="inner-box">
                        <figure class="image-box">
                            <img src="@coverImage" alt="@item.Name" style="width: 100%; height: 300px; object-fit: cover;">
                        </figure>
                        <div class="lower-content">
                            <span class="price-box">$@item.Price</span>

                            <h3><a href="/Shop/Index">@item.Name</a></h3>

                            <ul class="rating clearfix">
                                <li><i class="icon-Star"></i></li>
                                <li><i class="icon-Star"></i></li>
                                <li><i class="icon-Star"></i></li>
                                <li><i class="icon-Star"></i></li>
                                <li><i class="icon-Star"></i></li>
                            </ul>

                            <div class="cart-btn">
                                <a href="/Shop/Index" class="theme-btn-two">Add to cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>