@using Bagery.Business.Features.Abouts.Queries.GetAboutList
@model List<GetAboutListQueryResult>

@foreach (var item in Model)
{
    <section class="ourstory-section sec-pad" style="background-image: url(/Bagery/assets/images/background/mission-1.jpg);">
        <div class="auto-container">
            <div class="sec-title centred">
                <p>@item.MainTitle</p> <h2>@Html.Raw(item.AboutTitle)</h2>
            </div>
            <div class="row align-items-center clearfix">
                <div class="col-lg-4 col-md-6 col-sm-12 content-column">
                    <div id="content_block_1">
                        <div class="content-box">
                            <h3>About Bagery</h3> <p>@item.AboutDescription</p>
                            <figure class="signature"><img src="~/Bagery/assets/images/icons/signature-1.png" alt=""></figure>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 image-column">
                    <div class="image-box wow slideInUp animated animated" data-wow-delay="00ms" data-wow-duration="1500ms">
                        <img src="@item.MainImageUrl" alt="About Image" style="max-width:100%;">
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 content-column">
                    <div id="content_block_2">
                        <div class="content-box">
                            <h3>@item.OverviewTitle</h3> <p>@item.OverviewDescription</p>
                            <ul class="list clearfix">
                                @if (!string.IsNullOrEmpty(item.Overview1))
                                {
                                    <li><i class="icon-Check-mark"></i>@item.Overview1</li>
                                }
                                @if (!string.IsNullOrEmpty(item.Overview2))
                                {
                                    <li><i class="icon-Check-mark"></i>@item.Overview2</li>
                                }
                                @if (!string.IsNullOrEmpty(item.Overview3))
                                {
                                    <li><i class="icon-Check-mark"></i>@item.Overview3</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="more-btn centred">
                <a href="/Contact/Index" class="theme-btn-one">Contact Us</a>
            </div>
        </div>
    </section>
}