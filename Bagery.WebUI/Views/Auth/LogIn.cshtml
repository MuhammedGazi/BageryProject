@model Bagery.Business.DTOs.AuthDTOs.LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - Bagery</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            /* Aynı kurumsal kimlik: Sıcak gradient arka plan */
            background: linear-gradient(135deg, #fdfbfb 0%, #ebedee 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 450px; /* Login formu biraz daha dar olabilir */
            width: 100%;
            background: white;
        }

        .card-header-custom {
            background: linear-gradient(45deg, #ff9966, #ff5e62);
            padding: 40px 30px; /* Header biraz daha geniş */
            text-align: center;
            color: white;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

            .card-header-custom h2 {
                font-weight: 700;
                margin-bottom: 10px;
                letter-spacing: 1px;
            }

        .btn-custom {
            background: linear-gradient(45deg, #ff9966, #ff5e62);
            border: none;
            color: white;
            font-weight: 600;
            padding: 12px;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

            .btn-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 94, 98, 0.4);
                color: white;
            }

        .form-floating > label {
            padding-left: 40px;
        }

        .input-icon {
            position: absolute;
            top: 20px;
            left: 15px;
            z-index: 4;
            color: #aaa;
        }

        .form-control {
            border-radius: 10px;
            padding-left: 40px;
            height: 55px; /* Tık alanı genişletildi */
        }

            .form-control:focus {
                box-shadow: none;
                border-color: #ff9966;
            }

        .register-link {
            color: #ff5e62;
            text-decoration: none;
            font-weight: 600;
        }

            .register-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="login-card mx-auto">
            <div class="card-header-custom">
                <div class="mb-3">
                    <i class="fa-solid fa-cookie-bite fa-3x"></i>
                </div>
                <h2>Hoş Geldiniz</h2>
                <p class="mb-0 text-white-50">Hesabınıza giriş yaparak devam edin.</p>
            </div>

            <div class="card-body p-4 p-md-5">
                <form asp-action="LogIn" asp-controller="Auth" method="post">

                    <div class="mb-4 position-relative">
                        <i class="fa-solid fa-envelope input-icon"></i>
                        <div class="form-floating">
                            <input asp-for="Email" type="email" class="form-control" placeholder="name@example.com" required />
                            <label asp-for="Email">E-Posta Adresi</label>
                        </div>
                        <span asp-validation-for="Email" class="text-danger small ps-2"></span>
                    </div>

                    <div class="mb-4 position-relative">
                        <i class="fa-solid fa-key input-icon"></i>
                        <div class="form-floating">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" required />
                            <label asp-for="Password">Şifre</label>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small ps-2"></span>
                    </div>

                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-custom btn-lg">
                            <i class="fa-solid fa-right-to-bracket me-2"></i> Giriş Yap
                        </button>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <a href="#" class="text-muted small text-decoration-none hover-orange">Şifremi Unuttum?</a>
                    </div>

                    <hr class="my-4 text-muted">

                    <div class="text-center">
                        <p class="mb-0 text-muted">Bagery'de yeni misiniz? <a href="/Auth/Register" class="register-link">Hemen Kayıt Olun</a></p>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>