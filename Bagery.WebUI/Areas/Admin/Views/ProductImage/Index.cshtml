@model List<Bagery.Business.Features.ProductImages.Queries.GetProductImageList.GetProductImageListQueryResult>
@{
    ViewData["Title"] = "Ürün Görselleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var groupedImages = Model
        .Where(x => x.Product != null)
        .GroupBy(x => x.Product.Name)
        .OrderBy(g => g.Key)
        .ToList();
}

<div class="flex flex-col sm:flex-row justify-between items-end sm:items-center gap-4 mb-8">
    <div>
        <h1 class="text-2xl font-bold text-text-title">Görsel Galerisi</h1>
        <p class="text-text-secondary text-sm mt-1">Görseller ürün bazında gruplanarak listelenmiştir.</p>
    </div>
    <a href="/Admin/ProductImage/CreateProductImage"
       class="px-5 py-2.5 bg-primary hover:bg-primary-hover text-white rounded-lg text-sm font-bold flex items-center gap-2 transition-all shadow-soft hover:shadow-lg hover:-translate-y-0.5">
        <span class="material-symbols-outlined !text-[20px]">add_photo_alternate</span>
        Yeni Görsel Ekle
    </a>
</div>

@if (groupedImages.Any())
{
    <div class="space-y-10">
        @foreach (var group in groupedImages)
        {
            <div class="bg-bg-card border border-border-subtle rounded-2xl p-6 shadow-sm relative overflow-hidden">

                <div class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-bl-full -mr-10 -mt-10"></div>

                <div class="flex items-center justify-between mb-6 border-b border-border-subtle pb-4 relative z-10">
                    <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-lg bg-indigo-500/10 text-indigo-500 flex items-center justify-center">
                            <span class="material-symbols-outlined">inventory_2</span>
                        </div>
                        <div>
                            <h2 class="text-lg font-bold text-text-title">@group.Key</h2>
                            <span class="text-xs text-text-secondary">Toplam @group.Count() görsel</span>
                        </div>
                    </div>
                </div>

                <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4 relative z-10">
                    @foreach (var item in group)
                    {
                        <div class="group relative bg-bg-main border border-border-subtle rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-all duration-300">

                            <div class="aspect-square relative bg-gray-100">
                                <img src="@item.ThumbnailUrl" alt="@group.Key" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" loading="lazy" />

                                <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-200 flex items-center justify-center gap-2 backdrop-blur-[1px]">

                                    <a href="/Admin/ProductImage/UpdateProductImage/@item.ProductImageId" class="p-2 bg-amber-500 text-white rounded-full hover:bg-amber-400 transform hover:scale-110 transition-transform" title="Düzenle">
                                        <span class="material-symbols-outlined !text-[18px]">edit</span>
                                    </a>

                                    <button onclick="confirmDelete(event, '/Admin/ProductImage/DeleteProductImage/@item.ProductImageId')" class="p-2 bg-red-500 text-white rounded-full hover:bg-red-400 transform hover:scale-110 transition-transform" title="Sil">
                                        <span class="material-symbols-outlined !text-[18px]">delete</span>
                                    </button>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="flex flex-col items-center justify-center py-24 bg-bg-card border border-border-subtle rounded-xl border-dashed">
        <div class="w-20 h-20 bg-bg-main rounded-full flex items-center justify-center mb-4 text-text-secondary">
            <span class="material-symbols-outlined !text-4xl">collections_bookmark</span>
        </div>
        <h3 class="text-text-title font-medium">Galeri Boş</h3>
        <p class="text-text-secondary text-sm">Henüz sisteme görsel yüklenmemiş.</p>
    </div>
}