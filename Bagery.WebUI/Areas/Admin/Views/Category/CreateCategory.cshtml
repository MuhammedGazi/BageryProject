@model Bagery.Business.Features.Categories.Commands.CreateCategory.CreateCategoryCommand
@{
    ViewData["Title"] = "Kategori Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-xl mx-auto mt-10">
    <div class="bg-bg-card border border-border-subtle rounded-xl p-8 shadow-card relative overflow-hidden">

        <div class="absolute -top-10 -right-10 w-32 h-32 bg-primary/5 rounded-full blur-2xl"></div>

        <div class="mb-6">
            <h1 class="text-2xl font-bold text-text-title flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">bookmark_add</span>
                Yeni Kategori
            </h1>
            <p class="text-text-secondary text-sm">Yeni bir ürün grubu tanımlayın.</p>
        </div>

        <form method="post" class="space-y-6 relative z-10">
            <div>
                <label class="block text-sm font-medium text-text-title mb-2">Kategori Adı</label>
                <div class="relative">
                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">label</span>
                    <input type="text" asp-for="Name" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all placeholder-text-secondary/50" placeholder="Örn: Tatlılar" required />
                </div>
            </div>

            <div class="flex items-center justify-between pt-2">
                <a href="/Admin/Category/Index" class="text-sm text-text-secondary hover:text-text-main transition-colors font-medium">İptal</a>
                <button type="submit" class="px-8 py-3 bg-primary hover:bg-primary-hover text-white rounded-lg font-bold shadow-soft hover:shadow-lg hover:-translate-y-0.5 transition-all flex items-center gap-2">
                    <span class="material-symbols-outlined !text-[20px]">check</span>
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>