@model Bagery.Business.Features.Categories.Queries.GetCategoryById.GetCategoryByIdQueryResult
@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-xl mx-auto mt-10">
    <div class="bg-bg-card border border-border-subtle rounded-xl p-8 shadow-card relative overflow-hidden">

        <div class="absolute -top-10 -right-10 w-32 h-32 bg-amber-400/10 rounded-full blur-2xl"></div>

        <div class="mb-6">
            <h1 class="text-2xl font-bold text-text-title flex items-center gap-2">
                <span class="material-symbols-outlined text-amber-500">edit_square</span>
                Kategoriyi Güncelle
            </h1>
            <p class="text-text-secondary text-sm">#@Model.Id numaralı kaydı düzenliyorsunuz.</p>
        </div>

        <form method="post" class="space-y-6 relative z-10">
            <input type="hidden" asp-for="Id" />

            <div>
                <label class="block text-sm font-medium text-text-title mb-2">Kategori Adı</label>
                <div class="relative">
                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">label</span>
                    <input type="text" asp-for="Name" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-amber-400/30 focus:border-amber-400 outline-none transition-all" required />
                </div>
            </div>

            <div class="flex items-center justify-between pt-2">
                <a href="/Admin/Category/Index" class="text-sm text-text-secondary hover:text-text-main transition-colors font-medium">Vazgeç</a>
                <button type="submit" class="px-8 py-3 bg-amber-400 hover:bg-amber-500 text-white rounded-lg font-bold shadow-md hover:shadow-lg hover:-translate-y-0.5 transition-all flex items-center gap-2">
                    <span class="material-symbols-outlined !text-[20px]">save</span>
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>