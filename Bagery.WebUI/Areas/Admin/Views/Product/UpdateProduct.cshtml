@using Bagery.Business.Features.Products.Queries.GetProductById
@model GetProductByIdQueryResult

@{
    ViewData["Title"] = "Ürün Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-6xl mx-auto mt-6">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <div class="lg:col-span-1">
            <div class="bg-bg-card border border-border-subtle rounded-xl p-6 shadow-card sticky top-24 text-center">
                <div class="w-20 h-20 bg-indigo-500/10 text-indigo-500 rounded-full flex items-center justify-center mx-auto mb-4">
                    <span class="material-symbols-outlined !text-4xl">collections</span>
                </div>

                <h3 class="text-lg font-bold text-text-title">Ürün Galerisi</h3>
                <p class="text-sm text-text-secondary mt-2 mb-6">
                    Bu ürüne ait resimleri yüklemek, silmek veya sıralamak için galeri yönetimine gidin.
                </p>

                <a href="/Admin/ProductImage/Index?productId=@Model.ProductId" class="w-full py-3 px-4 bg-indigo-500 hover:bg-indigo-600 text-white rounded-lg font-bold shadow-md hover:shadow-lg transition-all flex items-center justify-center gap-2 group">
                    <span class="material-symbols-outlined group-hover:rotate-12 transition-transform">perm_media</span>
                    Görselleri Yönet
                </a>

                <div class="mt-4 pt-4 border-t border-border-subtle">
                    <p class="text-xs text-text-secondary">
                        <span class="font-semibold text-text-title">İpucu:</span> Kapak resmi galeri yönetiminde belirlenir.
                    </p>
                </div>
            </div>
        </div>

        <div class="lg:col-span-2">
            <form method="post" action="/Admin/Product/UpdateProduct">
                <input type="hidden" asp-for="ProductId" />

                <div class="bg-bg-card border border-border-subtle rounded-xl p-8 shadow-card">
                    <div class="mb-6 border-b border-border-subtle pb-4">
                        <h1 class="text-xl font-bold text-text-title flex items-center gap-2">
                            <span class="material-symbols-outlined text-amber-500">edit_square</span>
                            Ürün Bilgilerini Güncelle
                        </h1>
                        <p class="text-text-secondary text-sm">Temel ürün bilgilerini düzenleyin.</p>
                    </div>

                    <div class="space-y-6">
                        <div>
                            <label class="block text-sm font-medium text-text-title mb-2">Ürün Adı</label>
                            <div class="relative">
                                <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">label</span>
                                <input type="text" asp-for="Name" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 outline-none transition-all" required />
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-text-title mb-2">Fiyat (₺)</label>
                                <div class="relative">
                                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">payments</span>
                                    <input type="number" step="0.01" asp-for="Price" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 outline-none transition-all" required />
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-text-title mb-2">Kategori</label>
                                <div class="relative">
                                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">category</span>
                                    <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 outline-none transition-all appearance-none cursor-pointer">
                                        <option value="">Kategori Seçiniz</option>
                                    </select>
                                    <span class="material-symbols-outlined absolute right-3 top-1/2 -translate-y-1/2 text-text-secondary pointer-events-none">expand_more</span>
                                </div>
                            </div>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-text-title mb-2">Açıklama</label>
                            <textarea asp-for="Description" rows="6" class="w-full bg-bg-main border border-border-subtle rounded-lg p-4 text-text-main focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 outline-none transition-all resize-none"></textarea>
                        </div>

                        <div class="flex items-center justify-end gap-3 pt-4 border-t border-border-subtle mt-4">
                            <a href="/Admin/Product/Index" class="px-6 py-2.5 rounded-lg text-text-secondary hover:bg-bg-main transition-colors text-sm font-medium">İptal</a>
                            <button type="submit" class="px-8 py-2.5 bg-amber-500 hover:bg-amber-600 text-white rounded-lg font-bold shadow-soft hover:shadow-lg transition-all flex items-center gap-2">
                                <span class="material-symbols-outlined !text-[20px]">check_circle</span>
                                Bilgileri Güncelle
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>