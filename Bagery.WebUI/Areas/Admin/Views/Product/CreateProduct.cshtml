@using Bagery.Business.Features.Products.Commands.CreateProduct
@model CreateProductCommand

@{
    ViewData["Title"] = "Yeni Ürün Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h3>Yeni Ürün Ekle</h3>
    <form method="post" action="/Admin/Product/CreateProduct">

        <div class="mb-3">
            <label class="form-label">Ürün Adı</label>
            <input type="text" class="form-control" asp-for="Name" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Fiyat</label>
            <input type="number" step="0.01" class="form-control" asp-for="Price" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Açıklama</label>
            <textarea class="form-control" asp-for="Description" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label>Kategori</label>
            <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categories">
                <option value="">Kategori Seçiniz</option>
            </select>
        </div>

        <button type="submit" class="btn btn-success">Kaydet</button>
        <a href="/Admin/Product/Index" class="btn btn-secondary">İptal</a>
    </form>
</div>