@model Bagery.Business.Features.Promotions.Commands.CreatePromotion.CreatePromotionCommand

@{
    ViewData["Title"] = "Yeni Promosyon Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4>Yeni Promosyon Girişi</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="mb-3">
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" placeholder="Örn: Hafta Sonu İndirimi" required />
            </div>

            <div class="mb-3">
                <label>Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Kampanya detayları..."></textarea>
            </div>

            <div class="mb-3">
                <label>Fiyat / İndirim Tutarı</label>
                <input type="number" step="0.01" asp-for="Price" class="form-control" />
            </div>

            <div class="mb-3">
                <label>İkon (FontAwesome/Bootstrap vb.)</label>
                <input type="text" asp-for="IconUrl" class="form-control" placeholder="Örn: fa fa-gift" />
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
            <a href="/Admin/Promotion/Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>