@model Bagery.Business.Features.Promotions.Commands.CreatePromotion.CreatePromotionCommand

@{
    ViewData["Title"] = "Yeni Promosyon";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto mt-6">
    <div class="bg-bg-card border border-border-subtle rounded-xl p-8 shadow-card relative overflow-hidden">

        <div class="mb-8 border-b border-border-subtle pb-4">
            <h1 class="text-2xl font-bold text-text-title flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">verified</span>
                Yeni Kampanya Oluştur
            </h1>
            <p class="text-text-secondary text-sm">Müşterileri cezbedecek yeni bir fırsat ekleyin.</p>
        </div>

        <form method="post" class="space-y-6">

            <div>
                <label class="block text-sm font-medium text-text-title mb-2">Kampanya Başlığı</label>
                <div class="relative">
                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">title</span>
                    <input type="text" asp-for="Title" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" placeholder="Örn: Hafta Sonu Çılgınlığı" required />
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-text-title mb-2">Fiyat / İndirim Tutarı</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">payments</span>
                        <input type="number" step="0.01" asp-for="Price" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" placeholder="0.00" />
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-text-title mb-2">
                        İkon Adı
                        <a href="https://fonts.google.com/icons" target="_blank" class="text-primary text-xs hover:underline ml-1">(Listeye Bak ↗)</a>
                    </label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">sentiment_satisfied</span>
                        <input type="text" asp-for="IconUrl" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" placeholder="Örn: celebration" />
                    </div>
                    <p class="text-[10px] text-text-secondary mt-1">Google Material Symbols ismi giriniz (örn: 'cake', 'star').</p>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-text-title mb-2">Kampanya Detayları</label>
                <textarea asp-for="Description" rows="4" class="w-full bg-bg-main border border-border-subtle rounded-lg p-4 text-text-main focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all resize-none" placeholder="Kampanya koşulları ve içeriği..."></textarea>
            </div>

            <div class="flex items-center justify-end gap-3 pt-4 border-t border-border-subtle">
                <a href="/Admin/Promotion/Index" class="px-6 py-2.5 rounded-lg text-text-secondary hover:bg-bg-main transition-colors text-sm font-medium">Vazgeç</a>
                <button type="submit" class="px-8 py-2.5 bg-primary hover:bg-primary-hover text-white rounded-lg font-bold shadow-soft hover:shadow-lg transition-all flex items-center gap-2">
                    <span class="material-symbols-outlined !text-[20px]">save</span>
                    Kampanyayı Başlat
                </button>
            </div>
        </form>
    </div>
</div>