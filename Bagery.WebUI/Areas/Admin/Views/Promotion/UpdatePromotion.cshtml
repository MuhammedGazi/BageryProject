@model Bagery.Business.Features.Promotions.Queries.GetPromotionById.GetPromotionByIdQueryResult

@{
    ViewData["Title"] = "Promosyon Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto mt-6">
    <div class="bg-bg-card border border-border-subtle rounded-xl p-8 shadow-card relative overflow-hidden">

        <div class="mb-8 border-b border-border-subtle pb-4">
            <h1 class="text-2xl font-bold text-text-title flex items-center gap-2">
                <span class="material-symbols-outlined text-amber-500">edit_note</span>
                Kampanyayı Düzenle
            </h1>
            <p class="text-text-secondary text-sm">#@Model.PromotionId - Mevcut kampanya bilgilerini güncelliyorsunuz.</p>
        </div>

        <form method="post" class="space-y-6">
            <input type="hidden" name="PromotionId" value="@Model.PromotionId" />

            <div>
                <label class="block text-sm font-medium text-text-title mb-2">Kampanya Başlığı</label>
                <div class="relative">
                    <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">title</span>
                    <input type="text" name="Title" value="@Model.Title" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 outline-none transition-all" required />
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-text-title mb-2">Fiyat</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">payments</span>
                        <input type="number" step="0.01" name="Price" value="@Model.Price.ToString("0.00", System.Globalization.CultureInfo.InvariantCulture)" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 outline-none transition-all" />
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-text-title mb-2">
                        İkon Adı
                        <a href="https://fonts.google.com/icons" target="_blank" class="text-amber-500 text-xs hover:underline ml-1">(Listeye Bak ↗)</a>
                    </label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">sentiment_satisfied</span>
                        <input type="text" name="IconUrl" value="@Model.IconUrl" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 outline-none transition-all" />
                    </div>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-text-title mb-2">Kampanya Detayları</label>
                <textarea name="Description" rows="4" class="w-full bg-bg-main border border-border-subtle rounded-lg p-4 text-text-main focus:ring-2 focus:ring-amber-500/20 focus:border-amber-500 outline-none transition-all resize-none">@Model.Description</textarea>
            </div>

            <div class="flex items-center justify-end gap-3 pt-4 border-t border-border-subtle">
                <a href="/Admin/Promotion/Index" class="px-6 py-2.5 rounded-lg text-text-secondary hover:bg-bg-main transition-colors text-sm font-medium">İptal</a>
                <button type="submit" class="px-8 py-2.5 bg-amber-500 hover:bg-amber-600 text-white rounded-lg font-bold shadow-soft hover:shadow-lg transition-all flex items-center gap-2">
                    <span class="material-symbols-outlined !text-[20px]">save_as</span>
                    Değişiklikleri Kaydet
                </button>
            </div>
        </form>
    </div>
</div>