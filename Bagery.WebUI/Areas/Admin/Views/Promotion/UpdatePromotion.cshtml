@model Bagery.Business.Features.Promotions.Queries.GetPromotionById.GetPromotionByIdQueryResult

@{
    ViewData["Title"] = "Promosyon Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h4>Promosyon Güncelleme</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" name="PromotionId" value="@Model.PromotionId" />

            <div class="mb-3">
                <label>Başlık</label>
                <input type="text" name="Title" value="@Model.Title" class="form-control" required />
            </div>

            <div class="mb-3">
                <label>Açıklama</label>
                <textarea name="Description" class="form-control" rows="3">@Model.Description</textarea>
            </div>

            <div class="mb-3">
                <label>Fiyat</label>
                <input type="number" step="0.01" name="Price" value="@Model.Price.ToString("0.##").Replace(',', '.')" class="form-control" />
            </div>

            <div class="mb-3">
                <label>İkon URL</label>
                <input type="text" name="IconUrl" value="@Model.IconUrl" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a href="/Admin/Promotion/Index" class="btn btn-secondary">Vazgeç</a>
        </form>
    </div>
</div>