@model List<Bagery.Business.Features.Promotions.Queries.GetPromotionList.GetPromotionListQueryResult>

@{
    ViewData["Title"] = "Promosyon Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4>Promosyon Listesi</h4>
        <a href="/Admin/Promotion/CreatePromotion" class="btn btn-primary">Yeni Promosyon Ekle</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>İkon</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Fiyat</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PromotionId</td>
                        <td><i class="@item.IconUrl"></i> (@item.IconUrl)</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>
                            <a href="/Admin/Promotion/UpdatePromotion/@item.PromotionId" class="btn btn-warning btn-sm">Güncelle</a>
                            <a href="/Admin/Promotion/DeletePromotion/@item.PromotionId" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>