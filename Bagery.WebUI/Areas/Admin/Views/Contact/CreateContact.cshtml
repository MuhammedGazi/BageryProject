@using Bagery.Business.Features.Contacts.Commands.CreateContact
@model CreateContactCommand
@{
    ViewData["Title"] = "Yeni Mesaj";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="max-w-2xl mx-auto mt-6">
    <div class="bg-bg-card border border-border-subtle rounded-xl p-8 shadow-card relative overflow-hidden">

        <div class="mb-8 border-b border-border-subtle pb-4">
            <h1 class="text-2xl font-bold text-text-title flex items-center gap-2">
                <span class="material-symbols-outlined text-emerald-500">add_comment</span>
                Yeni Mesaj Oluştur
            </h1>
            <p class="text-text-secondary text-sm">Manuel olarak sisteme mesaj ekleyin.</p>
        </div>

        <form method="post" action="/Admin/Contact/CreateContact" class="space-y-5">

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div>
                    <label class="block text-sm font-medium text-text-title mb-2">Ad Soyad</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">person</span>
                        <input type="text" name="FullName" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" required placeholder="İsim Giriniz" />
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-text-title mb-2">Telefon</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">phone</span>
                        <input type="text" name="PhoneNumber" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" placeholder="+90..." />
                    </div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div>
                    <label class="block text-sm font-medium text-text-title mb-2">E-Mail Adresi</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">mail</span>
                        <input type="email" name="Email" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" required placeholder="ornek@mail.com" />
                    </div>
                </div>
                <div>
                    <label class="block text-sm font-medium text-text-title mb-2">Konu</label>
                    <div class="relative">
                        <span class="material-symbols-outlined absolute left-3 top-1/2 -translate-y-1/2 text-text-secondary">topic</span>
                        <input type="text" name="Subject" class="w-full bg-bg-main border border-border-subtle rounded-lg pl-10 pr-4 py-3 text-text-main focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all" required placeholder="Mesaj Konusu" />
                    </div>
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-text-title mb-2">Mesaj İçeriği</label>
                <textarea name="Message" rows="5" class="w-full bg-bg-main border border-border-subtle rounded-lg p-4 text-text-main focus:ring-2 focus:ring-primary/20 focus:border-primary outline-none transition-all resize-none" required placeholder="Mesaj detaylarını buraya yazınız..."></textarea>
            </div>

            <div class="flex items-center justify-end gap-3 pt-4">
                <a href="/Admin/Contact/Index" class="px-6 py-2.5 rounded-lg text-text-secondary hover:bg-bg-main transition-colors text-sm font-medium">Vazgeç</a>
                <button type="submit" class="px-8 py-2.5 bg-emerald-500 hover:bg-emerald-600 text-white rounded-lg font-bold shadow-soft transition-all flex items-center gap-2">
                    <span class="material-symbols-outlined !text-[20px]">send</span>
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>