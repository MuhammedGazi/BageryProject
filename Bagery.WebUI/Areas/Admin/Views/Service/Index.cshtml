@model List<Bagery.Business.Features.Services.Queries.GetServiceList.GetServiceListQueryResult>
@{
    ViewData["Title"] = "Hizmetler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    // Kartlar için renk paleti
    var colors = new[] { "text-blue-500 bg-blue-500/10", "text-emerald-500 bg-emerald-500/10", "text-amber-500 bg-amber-500/10", "text-purple-500 bg-purple-500/10" };
    var i = 0;
}

<div class="flex flex-col sm:flex-row justify-between items-end sm:items-center gap-4 mb-8">
    <div>
        <h1 class="text-2xl font-bold text-text-title">Hizmet Yönetimi</h1>
        <p class="text-text-secondary text-sm mt-1">Müşterilerinize sunduğunuz ayrıcalıklar.</p>
    </div>
    <a href="/Admin/Service/CreateService"
       class="px-5 py-2.5 bg-primary hover:bg-primary-hover text-white rounded-lg text-sm font-bold flex items-center gap-2 transition-all shadow-soft hover:shadow-lg hover:-translate-y-0.5">
        <span class="material-symbols-outlined !text-[20px]">add_circle</span>
        Yeni Hizmet Ekle
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var item in Model)
        {
            var themeClass = colors[i % colors.Length];
            i++;

            <div class="bg-bg-card border border-border-subtle rounded-xl p-6 flex flex-col items-center text-center shadow-card hover:shadow-soft transition-all duration-300 group hover:-translate-y-1 relative overflow-hidden">

                <div class="absolute top-0 right-0 w-24 h-24 bg-current opacity-[0.03] rounded-bl-full -mr-4 -mt-4 text-text-title pointer-events-none"></div>

                <div class="w-16 h-16 rounded-2xl flex items-center justify-center mb-4 @themeClass transition-transform group-hover:scale-110 duration-300">
                    <span class="material-symbols-outlined !text-[32px]">@(string.IsNullOrEmpty(item.IconUrl) ? "star" : item.IconUrl)</span>
                </div>

                <h3 class="text-lg font-bold text-text-title mb-2">@item.Title</h3>
                <p class="text-text-secondary text-sm leading-relaxed mb-6 line-clamp-3">
                    @item.Description
                </p>

                <div class="mt-auto flex gap-2 w-full pt-4 border-t border-border-subtle/50">
                    <a href="/Admin/Service/UpdateService/@item.ServiceId" class="flex-1 py-2 rounded-lg bg-bg-main hover:bg-amber-500 hover:text-white text-text-secondary transition-colors text-xs font-bold flex items-center justify-center gap-1">
                        <span class="material-symbols-outlined !text-[16px]">edit</span>
                        Düzenle
                    </a>

                    <button onclick="confirmDelete(event, '/Admin/Service/DeleteService/@item.ServiceId')" class="flex-1 py-2 rounded-lg bg-bg-main hover:bg-red-500 hover:text-white text-text-secondary transition-colors text-xs font-bold flex items-center justify-center gap-1">
                        <span class="material-symbols-outlined !text-[16px]">delete</span>
                        Sil
                    </button>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="flex flex-col items-center justify-center py-24 bg-bg-card border border-border-subtle rounded-xl border-dashed">
        <div class="w-20 h-20 bg-bg-main rounded-full flex items-center justify-center mb-4 text-text-secondary">
            <span class="material-symbols-outlined !text-4xl">design_services</span>
        </div>
        <h3 class="text-text-title font-medium">Hizmet Bulunamadı</h3>
        <p class="text-text-secondary text-sm">Henüz eklenmiş bir hizmet yok.</p>
    </div>
}