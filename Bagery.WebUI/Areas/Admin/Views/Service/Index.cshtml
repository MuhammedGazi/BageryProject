@model List<Bagery.Business.Features.Services.Queries.GetServiceList.GetServiceListQueryResult>
@{
    ViewData["Title"] = "Hizmet Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var count = 0;
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="card-title mb-0 text-white">Hizmet Listesi</h3>
            <a href="/Admin/Service/CreateService" class="btn btn-light text-primary fw-bold">
                <i class="fa fa-plus"></i> Yeni Hizmet Oluştur
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-center" style="width: 50px;">#</th>
                            <th scope="col">Başlık</th>
                            <th scope="col">Açıklama</th>
                            <th scope="col">İkon</th>
                            <th scope="col" class="text-center" style="width: 200px;">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td class="text-center fw-bold">@count</td>
                                    <td>@item.Title</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 50)
                                        {
                                            @item.Description.Substring(0, 50)
                                
                                            <text>...</text>
                                        }
                                        else
                                        {
                                            @item.Description
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.IconUrl</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="/Admin/Service/UpdateService/@item.ServiceId" class="btn btn-warning btn-sm text-white mx-1">
                                                <i class="fa fa-edit"></i> Güncelle
                                            </a>
                                            <a href="/Admin/Service/DeleteService/@item.ServiceId" class="btn btn-danger btn-sm mx-1" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                                <i class="fa fa-trash"></i> Sil
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-4 text-muted">
                                    Herhangi bir hizmet kaydı bulunamadı.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

