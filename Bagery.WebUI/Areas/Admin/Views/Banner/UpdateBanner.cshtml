@using Bagery.Business.Features.Banners.Queries.GetBannerById
@model GetBannerByIdQueryResult
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6 max-w-4xl mx-auto">
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Banner Güncelle</h1>
        <p class="text-gray-500 text-sm">Mevcut banner bilgilerini düzenleyin.</p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 p-8">
        <form action="/Admin/Banner/UpdateBanner" method="post" enctype="multipart/form-data" class="space-y-6">
            
            <input type="hidden" name="BannerId" value="@Model.BannerId" />

            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Başlık</label>
                <input type="text" name="Title" value="@Model.Title" required
                       class="w-full px-4 py-3 rounded-xl bg-gray-50 dark:bg-gray-900 border-gray-200 dark:border-gray-700 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all" />
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Açıklama</label>
                <textarea name="Description" rows="4"
                          class="w-full px-4 py-3 rounded-xl bg-gray-50 dark:bg-gray-900 border-gray-200 dark:border-gray-700 focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 outline-none transition-all resize-none">@Model.Description</textarea>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Mevcut Görsel</label>
                    <div class="rounded-xl overflow-hidden border border-gray-200 dark:border-gray-700 bg-gray-50 h-48 flex items-center justify-center">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="w-full h-full object-cover" />
                        }
                        else
                        {
                            <span class="text-gray-400 text-sm">Görsel Yok</span>
                        }
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Görseli Değiştir (Opsiyonel)</label>
                    <label class="flex flex-col items-center justify-center w-full h-48 border-2 border-gray-300 border-dashed rounded-xl cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 transition-colors">
                        <div class="flex flex-col items-center justify-center pt-5 pb-6">
                            <span class="material-symbols-outlined text-3xl text-gray-400 mb-2">image</span>
                            <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Değiştirmek için tıkla</span></p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">PNG, JPG (Max 5MB)</p>
                        </div>
                        <input name="ImageFile" type="file" class="hidden" accept="image/*" />
                    </label>
                </div>
            </div>

            <div class="flex items-center justify-end gap-3 pt-4 border-t border-gray-100 dark:border-gray-700">
                <a href="/Admin/Banner/Index" class="px-6 py-2.5 rounded-xl border border-gray-300 text-gray-700 hover:bg-gray-50 font-medium transition-colors">
                    İptal
                </a>
                <button type="submit" class="px-6 py-2.5 rounded-xl bg-indigo-600 text-white hover:bg-indigo-700 font-medium shadow-sm shadow-indigo-200 transition-all">
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

