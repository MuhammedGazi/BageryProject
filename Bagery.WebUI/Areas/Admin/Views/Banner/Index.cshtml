@using Bagery.Business.Features.Banners.Queries.GetBannerList
@model List<GetBannerListQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-6">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-8">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Banner Yönetimi</h1>
            <p class="text-gray-500 text-sm mt-1">Anasayfa slider alanlarını buradan yönetebilirsiniz.</p>
        </div>
        <a href="/Admin/Banner/CreateBanner" class="flex items-center gap-2 bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2.5 rounded-xl font-medium transition-colors shadow-sm hover:shadow-md">
            <span class="material-symbols-outlined text-[20px]">add</span>
            Yeni Banner Ekle
        </a>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left text-sm text-gray-600 dark:text-gray-300">
                <thead class="bg-gray-50 dark:bg-gray-700/50 text-xs uppercase font-semibold text-gray-500 dark:text-gray-400">
                    <tr>
                        <th class="px-6 py-4">Görsel</th>
                        <th class="px-6 py-4">Başlık</th>
                        <th class="px-6 py-4">Açıklama</th>
                        <th class="px-6 py-4 text-right">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/30 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="w-32 h-16 rounded-lg bg-gray-100 dark:bg-gray-700 overflow-hidden border border-gray-200 dark:border-gray-600">
                                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                                        {
                                            <img src="@item.ImageUrl" class="w-full h-full object-cover" alt="Banner" />
                                        }
                                        else
                                        {
                                            <div class="w-full h-full flex items-center justify-center text-gray-400">
                                                <span class="material-symbols-outlined">image</span>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                    @item.Title
                                </td>
                                <td class="px-6 py-4 max-w-xs truncate">
                                    @item.Description
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <div class="flex justify-end gap-2">
                                        <a href="/Admin/Banner/UpdateBanner/@item.BannerId" class="size-9 flex items-center justify-center rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100 dark:bg-blue-900/20 dark:text-blue-400 transition-colors">
                                            <span class="material-symbols-outlined text-[18px]">edit</span>
                                        </a>
                                        <a href="/Admin/Banner/DeleteBanner/@item.BannerId" onclick="return confirm('Silmek istediğinize emin misiniz?');" class="size-9 flex items-center justify-center rounded-lg bg-red-50 text-red-600 hover:bg-red-100 dark:bg-red-900/20 dark:text-red-400 transition-colors">
                                            <span class="material-symbols-outlined text-[18px]">delete</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="px-6 py-12 text-center text-gray-500">
                                <div class="flex flex-col items-center gap-3">
                                    <span class="material-symbols-outlined text-4xl text-gray-300">image_not_supported</span>
                                    <p>Henüz eklenmiş bir banner bulunmuyor.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

