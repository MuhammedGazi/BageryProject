@model Bagery.Business.Features.Abouts.Commands.CreateAbout.CreateAboutCommand
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Yeni Hakkımızda Yazısı Oluştur</h1>

<form method="post" action="/Admin/About/CreateAbout">

    <div class="form-group mb-3">
        <label>Ana Başlık (Main Title)</label>
        <input type="text" name="MainTitle" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Ana Resim URL (Main Image Url)</label>
        <input type="text" name="MainImageUrl" class="form-control" />
    </div>

    <hr />

    <div class="form-group mb-3">
        <label>Hakkımızda Başlık (About Title)</label>
        <input type="text" name="AboutTitle" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Hakkımızda Açıklama (About Description)</label>
        <textarea name="AboutDescription" class="form-control" rows="4"></textarea>
    </div>

    <hr />

    <div class="form-group mb-3">
        <label>Genel Bakış Başlık (Overview Title)</label>
        <input type="text" name="OverviewTitle" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Genel Bakış Açıklama (Overview Description)</label>
        <textarea name="OverviewDescription" class="form-control" rows="3"></textarea>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label>Madde 1 (Overview 1)</label>
                <input type="text" name="Overview1" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label>Madde 2 (Overview 2)</label>
                <input type="text" name="Overview2" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group mb-3">
                <label>Madde 3 (Overview 3)</label>
                <input type="text" name="Overview3" class="form-control" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

