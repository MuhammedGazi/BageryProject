@model List<Bagery.Core.Entities.Notification>
@{
    ViewData["Title"] = "Bildirimlerim";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="cart-section bg-light" style="padding: 80px 0;">
    <div class="auto-container">

        <div class="row mb-4 align-items-center">
            <div class="col-md-6">
                <h3 class="fw-bold text-dark m-0">
                    <i class="fa fa-bell text-warning me-2"></i>Bildirim Merkezi
                </h3>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-secondary rounded-pill fs-6 px-3 py-2">
                    Toplam: @Model.Count
                </span>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">

                @if (Model == null || Model.Count == 0)
                {
                    /* --- BİLDİRİM YOKSA GÖZÜKECEK ALAN --- */
                    <div class="card border-0 shadow-sm text-center py-5">
                        <div class="card-body">
                            <div class="mb-3">
                                <span class="fa-stack fa-2x text-muted">
                                    <i class="fa fa-circle fa-stack-2x" style="color: #e9ecef;"></i>
                                    <i class="fa fa-bell-slash fa-stack-1x"></i>
                                </span>
                            </div>
                            <h4 class="text-muted">Henüz bir bildiriminiz yok.</h4>
                            <p class="text-muted mb-4">Kampanyalarımızdan haberdar olduğunuzda burada listelenecektir.</p>
                            <a href="/Shop/Index" class="theme-btn-one">Alışverişe Başla</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="notification-list">
                        @foreach (var item in Model)
                        {
                            /* Okunmamışsa sol tarafı kalın renkli çizgi, okunmuşsa gri */
                            string borderClass = !item.IsRead ? "border-start border-5 border-warning bg-white" : "border-start border-5 border-secondary bg-light opacity-75";
                            string iconClass = !item.IsRead ? "fa-envelope-open-text text-warning" : "fa-check-circle text-muted";
                            string titleClass = !item.IsRead ? "text-dark fw-bold" : "text-muted";

                            <div class="card mb-3 shadow-sm @borderClass" style="transition: all 0.3s ease;">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-start">

                                        <div class="flex-shrink-0 me-3 mt-1">
                                            <div class="rounded-circle d-flex align-items-center justify-content-center"
                                                 style="width: 50px; height: 50px; background-color: #f8f9fa;">
                                                <i class="fa @iconClass fs-4"></i>
                                            </div>
                                        </div>

                                        <div class="flex-grow-1">
                                            <div class="d-flex justify-content-between align-items-center mb-1">
                                                <h5 class="@titleClass mb-0" style="font-size: 1.1rem;">
                                                    @item.Title
                                                    @if (!item.IsRead)
                                                    {
                                                        <span class="badge bg-danger ms-2" style="font-size: 0.65rem; vertical-align: middle;">YENİ</span>
                                                    }
                                                </h5>
                                                <small class="text-muted d-flex align-items-center">
                                                    <i class="fa fa-clock me-1"></i>
                                                    @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </div>

                                            <p class="card-text text-secondary mb-0" style="font-size: 0.95rem; line-height: 1.6;">
                                                @item.Message
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .notification-list .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }
    </style>
}