@model List<Bagery.Core.Entities.Notification>
@{
    ViewData["Title"] = "Bildirimlerim";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main class="flex-1 h-full overflow-y-auto p-6 md:p-10 scroll-smooth">

    <div class="flex flex-col md:flex-row gap-6 justify-between items-start md:items-center mb-10">
        <div>
            <h1 class="text-3xl font-bold text-[#1c0d11] dark:text-white mb-2 tracking-tight">Bildirim Merkezi</h1>
            <p class="text-secondary dark:text-gray-400 font-medium">Tüm duyuru ve kampanya bildirimleriniz.</p>
        </div>

        <div class="bg-card-light dark:bg-card-dark px-6 py-3 rounded-2xl shadow-sm border border-primary/5 flex items-center gap-3">
            <span class="size-2 rounded-full bg-primary animate-pulse"></span>
            <span class="text-sm font-bold text-secondary uppercase tracking-wide">Toplam:</span>
            <span class="text-xl font-black text-primary">@Model.Count</span>
        </div>
    </div>

    <div class="flex flex-col gap-4 pb-10">
        @if (Model == null || Model.Count == 0)
        {
            <div class="flex flex-col items-center justify-center h-[50vh] text-center p-8 bg-card-light dark:bg-card-dark rounded-[2rem] border border-dashed border-primary/10">
                <div class="size-24 rounded-full bg-primary-soft flex items-center justify-center mb-6">
                    <span class="material-symbols-outlined text-5xl text-primary/40">notifications_off</span>
                </div>
                <h3 class="text-2xl font-bold text-[#1c0d11] dark:text-white mb-2">Henüz bildiriminiz yok</h3>
                <p class="text-secondary max-w-md mx-auto mb-8">Kampanyalar ve sipariş durumlarınızla ilgili güncellemeler burada listelenecektir.</p>
                <a href="/Shop/Index" class="px-8 py-3 bg-primary hover:bg-secondary text-white font-bold rounded-2xl transition-all shadow-soft-pink flex items-center gap-2">
                    <span class="material-symbols-outlined text-[20px]">storefront</span>
                    Alışverişe Başla
                </a>
            </div>
        }
        else
        {
            @foreach (var item in Model.OrderByDescending(x => x.CreatedDate))
            {
                // Okunmamışsa belirgin, okunmuşsa soluk stil
                string cardStyle = !item.IsRead
                ? "bg-card-light dark:bg-card-dark border-l-4 border-l-primary shadow-soft-pink"
                : "bg-[#FFFBF2]/50 dark:bg-white/5 border-l-4 border-l-gray-300 dark:border-l-gray-700 opacity-90";

                string iconBg = !item.IsRead ? "bg-primary-soft text-primary" : "bg-gray-100 dark:bg-white/10 text-gray-400";
                string titleColor = !item.IsRead ? "text-[#1c0d11] dark:text-white" : "text-gray-500 dark:text-gray-400";
                string iconName = !item.IsRead ? "mark_email_unread" : "mark_email_read";

                <div class="@cardStyle p-6 rounded-2xl shadow-sm hover:shadow-md transition-all duration-300 border border-t-0 border-r-0 border-b-0 border-gray-100 dark:border-gray-800 group relative overflow-hidden">

                    <div class="flex items-start gap-5">
                        <div class="size-14 rounded-2xl @iconBg flex items-center justify-center flex-shrink-0 transition-colors">
                            <span class="material-symbols-outlined text-[28px]">@iconName</span>
                        </div>

                        <div class="flex-1 min-w-0">
                            <div class="flex flex-wrap justify-between items-start gap-2 mb-2">
                                <h3 class="text-lg font-bold @titleColor truncate pr-4">
                                    @item.Title
                                </h3>

                                <span class="flex items-center gap-1 text-xs font-bold text-secondary/60 bg-white/50 dark:bg-black/20 px-2 py-1 rounded-lg whitespace-nowrap">
                                    <span class="material-symbols-outlined text-[14px]">schedule</span>
                                    @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                </span>
                            </div>

                            <p class="text-secondary dark:text-gray-400 text-sm leading-relaxed">
                                @item.Message
                            </p>
                        </div>
                    </div>

                    @if (!item.IsRead)
                    {
                        <div class="absolute top-4 right-4">
                            <span class="flex size-3">
                                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
                                <span class="relative inline-flex rounded-full size-3 bg-primary"></span>
                            </span>
                        </div>
                    }
                </div>
            }
        }
    </div>
</main>