@using Bagery.Core.Entities
@using Bagery.Core.Consts
@model List<Bagery.Business.Features.Orders.Queries.GetOrderList.GetOrderListQueryResult>
@{
    ViewData["Title"] = "Siparişlerim";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main class="flex-1 h-full overflow-y-auto p-6 md:p-10 scroll-smooth">

    <div class="flex flex-col xl:flex-row gap-8 justify-between items-start xl:items-center mb-10">
        <div>
            <h1 class="text-3xl font-bold text-[#1c0d11] dark:text-white mb-2 tracking-tight">Siparişlerim</h1>
            <p class="text-secondary dark:text-gray-400 font-medium">Geçmiş ve aktif tüm siparişleriniz.</p>
        </div>

        <div class="flex gap-4 w-full xl:w-auto">
            <div class="flex-1 xl:flex-none bg-card-light dark:bg-card-dark p-5 rounded-3xl shadow-sm border border-primary/5 flex items-center gap-4 min-w-[180px]">
                <div class="p-3 bg-primary-soft rounded-2xl text-primary">
                    <span class="material-symbols-outlined text-[24px]">shopping_bag</span>
                </div>
                <div>
                    <p class="text-xs font-bold text-secondary/70 uppercase tracking-wider mb-1">Toplam</p>
                    <p class="text-2xl font-black text-primary">@Model.Count()</p>
                </div>
            </div>

            <div class="flex-1 xl:flex-none bg-card-light dark:bg-card-dark p-5 rounded-3xl shadow-sm border border-primary/5 flex items-center gap-4 min-w-[180px]">
                <div class="p-3 bg-amber-50 dark:bg-amber-900/20 rounded-2xl text-amber-500">
                    <span class="material-symbols-outlined text-[24px]">hourglass_top</span>
                </div>
                <div>
                    <p class="text-xs font-bold text-secondary/70 uppercase tracking-wider mb-1">Hazırlanan</p>
                    <p class="text-2xl font-black text-amber-500">
                        @Model.Count(x => x.OrderStatus == OrderStatus.Hazirlaniyor)
                    </p>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="flex flex-col gap-6 pb-10">
            @foreach (var order in Model.OrderByDescending(x => x.Date))
            {
                <div class="bg-card-light dark:bg-card-dark rounded-[2rem] p-6 md:p-8 shadow-sm hover:shadow-soft-pink border border-primary/5 transition-all duration-300 group">

                    <div class="flex flex-col lg:flex-row gap-6 justify-between items-start lg:items-center">

                        <div class="flex gap-5 items-center w-full lg:w-auto">
                            <div class="size-16 rounded-2xl bg-[#FFFBF2] dark:bg-white/5 border border-primary/10 flex items-center justify-center text-xl font-black text-primary/40 group-hover:text-primary transition-colors">
                                #@order.Id
                            </div>
                            <div class="flex-1">
                                <h3 class="font-bold text-xl text-[#1c0d11] dark:text-white mb-1 group-hover:text-primary transition-colors">
                                    Sipariş #@order.Id
                                </h3>
                                <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-secondary dark:text-gray-400 font-medium">
                                    <span class="flex items-center gap-1.5 bg-primary-soft/50 px-2 py-1 rounded-lg text-primary-800">
                                        <span class="material-symbols-outlined text-[18px] text-primary">calendar_month</span>
                                        @order.Date.ToString("dd MMM yyyy, HH:mm")
                                    </span>
                                    <span class="font-bold text-primary text-base">@order.TotalPrice.ToString("C2")</span>
                                </div>
                            </div>
                        </div>

                        <div class="flex flex-wrap items-center gap-3 w-full lg:w-auto justify-end">

                            @{
                                string statusStyle = order.OrderStatus switch
                                {
                                    OrderStatus.Hazirlaniyor => "bg-amber-100 text-amber-700 border-amber-200 dark:bg-amber-900/30 dark:text-amber-400 dark:border-amber-800",
                                    OrderStatus.Kargoda => "bg-blue-100 text-blue-700 border-blue-200 dark:bg-blue-900/30 dark:text-blue-400 dark:border-blue-800",
                                    OrderStatus.TeslimEdildi => "bg-emerald-100 text-emerald-700 border-emerald-200 dark:bg-emerald-900/30 dark:text-emerald-400 dark:border-emerald-800",
                                    OrderStatus.IptalEdildi => "bg-red-100 text-red-700 border-red-200 dark:bg-red-900/30 dark:text-red-400 dark:border-red-800",
                                    _ => "bg-gray-100 text-gray-700 border-gray-200"
                                };
                            }
                            <span class="px-4 py-2 rounded-xl text-sm font-bold border @statusStyle flex items-center gap-2 shadow-sm">
                                <span class="size-2 rounded-full bg-current animate-pulse"></span>
                                @order.OrderStatus
                            </span>

                            <div class="flex gap-2 w-full sm:w-auto mt-2 sm:mt-0">
                                @if (order.OrderStatus == OrderStatus.Hazirlaniyor)
                                {
                                    <form action="/User/Order/CancelOrder" method="post" class="flex-1 sm:flex-none" onsubmit="return confirm('Siparişi iptal etmek istediğinize emin misiniz?');">
                                        <input type="hidden" name="orderId" value="@order.Id" />
                                        <button type="submit" class="w-full sm:w-auto h-11 px-5 rounded-xl border-2 border-red-100 text-red-500 hover:bg-red-500 hover:text-white hover:border-red-500 dark:border-red-900/30 dark:text-red-400 font-bold text-sm transition-all duration-200 flex items-center justify-center gap-2 group/cancel">
                                            <span class="material-symbols-outlined text-[20px]">block</span>
                                            İptal
                                        </button>
                                    </form>
                                }

                                <button onclick="toggleDetails(@order.Id)" class="flex-1 sm:flex-none h-11 px-6 rounded-xl bg-primary text-white hover:bg-secondary font-bold text-sm transition-all duration-200 shadow-soft-pink hover:shadow-lg hover:-translate-y-0.5 flex items-center justify-center gap-2">
                                    Detay
                                    <span id="chevron-@order.Id" class="material-symbols-outlined text-[20px] transition-transform duration-300">expand_more</span>
                                </button>
                            </div>
                        </div>
                    </div>

                    <div id="details-@order.Id" class="hidden mt-8 pt-6 border-t border-primary/10">
                        <h4 class="font-bold text-[#1c0d11] dark:text-white mb-4 flex items-center gap-2">
                            <span class="material-symbols-outlined text-primary">shopping_basket</span>
                            Sepet İçeriği
                        </h4>

                        <div class="overflow-hidden rounded-2xl border border-primary/5">
                            <table class="w-full text-left">
                                <thead class="bg-primary-soft/30 dark:bg-white/5">
                                    <tr class="text-xs text-secondary uppercase tracking-wider">
                                        <th class="py-3 px-4 font-bold">Ürün</th>
                                        <th class="py-3 px-4 font-bold text-center">Birim</th>
                                        <th class="py-3 px-4 font-bold text-center">Adet</th>
                                        <th class="py-3 px-4 font-bold text-right">Tutar</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-primary/5">
                                    @if (order.OrderDetails != null)
                                    {
                                        foreach (var item in order.OrderDetails)
                                        {
                                            <tr class="text-sm hover:bg-white/50 dark:hover:bg-white/5 transition-colors">
                                                <td class="py-3 px-4">
                                                    <div class="flex items-center gap-3">
                                                        <div class="size-12 rounded-xl bg-white dark:bg-white/5 border border-primary/10 overflow-hidden flex-shrink-0 p-0.5">
                                                            @if (item.Product?.ProductImages?.FirstOrDefault() != null)
                                                            {
                                                                <img src="@item.Product.ProductImages.FirstOrDefault().ThumbnailUrl" class="w-full h-full object-cover rounded-lg" />
                                                            }
                                                            else
                                                            {
                                                                <div class="w-full h-full flex items-center justify-center text-primary/30">
                                                                    <span class="material-symbols-outlined text-[20px]">cake</span>
                                                                </div>
                                                            }
                                                        </div>
                                                        <span class="font-bold text-[#1c0d11] dark:text-white">
                                                            @(item.Product?.Name ?? "Ürün Silinmiş")
                                                        </span>
                                                    </div>
                                                </td>
                                                <td class="py-3 px-4 text-center text-secondary">@item.UnitPrice.ToString("C2")</td>
                                                <td class="py-3 px-4 text-center font-bold bg-primary-soft/20 rounded-lg text-primary">x @item.Quantity</td>
                                                <td class="py-3 px-4 text-right font-black text-[#1c0d11] dark:text-white">
                                                    @((item.UnitPrice * item.Quantity).ToString("C2"))
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="flex flex-col items-center justify-center h-[60vh] text-center">
            <div class="size-28 rounded-full bg-primary-soft flex items-center justify-center mb-6 animate-bounce">
                <span class="material-symbols-outlined text-5xl text-primary">receipt_long</span>
            </div>
            <h3 class="text-2xl font-bold text-[#1c0d11] dark:text-white mb-2">Henüz Sipariş Yok</h3>
            <p class="text-secondary max-w-md mx-auto mb-8">Henüz fırınımızdan çıkan taze lezzetlerle tanışmadınız mı?</p>
            <a href="/Shop/Index" class="px-8 py-4 bg-primary hover:bg-secondary text-white font-bold rounded-2xl transition-all transform hover:scale-105 shadow-soft-pink flex items-center gap-2">
                <span class="material-symbols-outlined">storefront</span>
                Alışverişe Başla
            </a>
        </div>
    }
</main>

@section Scripts {
    <script>
        function toggleDetails(id) {
            const details = document.getElementById(`details-${id}`);
            const chevron = document.getElementById(`chevron-${id}`);

            if (details.classList.contains('hidden')) {
                // Açılıyor
                details.classList.remove('hidden');
                // Animasyon ekle (Fade in)
                details.animate([
                    { opacity: 0, transform: 'translateY(-10px)' },
                    { opacity: 1, transform: 'translateY(0)' }
                ], { duration: 300, easing: 'ease-out' });

                chevron.style.transform = 'rotate(180deg)';
            } else {
                // Kapanıyor
                details.classList.add('hidden');
                chevron.style.transform = 'rotate(0deg)';
            }
        }
    </script>
}