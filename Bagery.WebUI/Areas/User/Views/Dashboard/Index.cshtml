@using Bagery.Business.Features.Orders.Queries.GetOrderList
@using Bagery.Business.Features.Products.Queries.GetProductList
@using Bagery.Core.Consts
@using Bagery.WebUI.Areas.User.Controllers
@using Bagery.WebUI.Areas.User.Models
@model UserDashboardDto

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<main class="flex-1 h-full overflow-y-auto p-4 md:p-8 relative">

    <div class="md:hidden flex items-center justify-between mb-8 bg-card-light dark:bg-card-dark p-4 rounded-2xl shadow-sm">
        <div class="flex items-center gap-3">
            <div class="size-10 rounded-full overflow-hidden bg-gray-200">
                <img alt="Profile" class="w-full h-full object-cover" src="https://ui-avatars.com/api/?name=@User.Identity?.Name&background=random" />
            </div>
            <span class="font-bold text-gray-900 dark:text-white">Merhaba, @User.Identity?.Name!</span>
        </div>
    </div>

    <div class="max-w-[1000px] mx-auto flex flex-col gap-8 pb-10">

        <header class="flex flex-col md:flex-row md:items-end justify-between gap-6 relative z-10">
            <div class="flex flex-col gap-2">
                <h1 class="text-4xl md:text-5xl font-black text-gray-900 dark:text-white tracking-tight">Hoş Geldin!</h1>
                <p class="text-secondary dark:text-gray-400 text-lg">Bugün canın tatlı mı çekiyor? 🥐</p>
            </div>
            <a href="/Shop/Index/" class="flex items-center gap-2 bg-white dark:bg-card-dark text-gray-900 dark:text-white px-6 py-3 rounded-full font-bold shadow-sm hover:shadow-md transition-all active:scale-95 group border border-gray-100 dark:border-gray-700">
                <span class="bg-primary/10 text-primary p-1 rounded-full group-hover:bg-primary group-hover:text-white transition-colors">
                    <span class="material-symbols-outlined text-[20px] block">add</span>
                </span>
                Yeni Sipariş Oluştur
            </a>
        </header>

        <section class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-accent-rose dark:bg-[#3d252b] p-6 rounded-3xl flex flex-col justify-between h-40 shadow-sm border border-pink-100 dark:border-none">
                <div class="flex justify-between items-start">
                    <span class="material-symbols-outlined text-primary text-3xl">soup_kitchen</span>
                    <span class="bg-primary text-white text-xs font-bold px-3 py-1 rounded-full">Canlı</span>
                </div>
                <div>
                    <p class="text-secondary dark:text-gray-300 text-sm font-medium">Aktif Sipariş</p>
                    <h3 class="text-3xl font-black text-gray-900 dark:text-white">@Model.ActiveCount</h3>
                </div>
            </div>

            <div class="bg-[#FFF8E1] dark:bg-[#3d3625] p-6 rounded-3xl flex flex-col justify-between h-40 shadow-sm border border-yellow-100 dark:border-none">
                <div class="flex justify-between items-start">
                    <span class="material-symbols-outlined text-yellow-600 text-3xl">wallet</span>
                </div>
                <div>
                    <p class="text-yellow-800 dark:text-yellow-200 text-sm font-medium">Toplam Harcama</p>
                    <h3 class="text-3xl font-black text-gray-900 dark:text-white">@Model.PaymentCount.ToString("C2")</h3>
                </div>
            </div>

            <div class="bg-white dark:bg-card-dark p-6 rounded-3xl flex flex-col justify-between h-40 shadow-sm border border-gray-100 dark:border-gray-700">
                <div class="flex justify-between items-start">
                    <span class="material-symbols-outlined text-gray-600 text-3xl">local_activity</span>
                </div>
                <div>
                    <p class="text-gray-500 dark:text-gray-400 text-sm font-medium">Kampanyalar</p>
                    <h3 class="text-3xl font-black text-gray-900 dark:text-white">@Model.PromotionCount</h3>
                </div>
            </div>
        </section>

        <section>
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">history</span>
                Sipariş Geçmişi
            </h2>

            <div class="flex flex-col gap-3">
                @if (Model.OrderList != null && Model.OrderList.Any())
                {
                    @foreach (var order in Model.OrderList.OrderByDescending(x => x.Date))
                    {
                        // Duruma göre renk ve ikon belirleme
                        string statusColor = "bg-gray-100 text-gray-600";
                        string icon = "receipt";

                        if (order.OrderStatus == OrderStatus.IptalEdildi) { statusColor = "bg-red-100 text-red-600"; icon = "cancel"; }
                        else if (order.OrderStatus == OrderStatus.TeslimEdildi) { statusColor = "bg-green-100 text-green-600"; icon = "check_circle"; }
                        else if (order.OrderStatus == OrderStatus.Hazirlaniyor) { statusColor = "bg-orange-100 text-orange-600"; icon = "skillet"; }
                        else { statusColor = "bg-blue-100 text-blue-600"; icon = "schedule"; }

                        <details class="group bg-white dark:bg-card-dark rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 overflow-hidden transition-all duration-300">
                            <summary class="flex items-center justify-between p-5 cursor-pointer list-none hover:bg-gray-50 dark:hover:bg-white/5 transition-colors">
                                <div class="flex items-center gap-4">
                                    <div class="size-10 rounded-full @statusColor flex items-center justify-center shrink-0">
                                        <span class="material-symbols-outlined">@icon</span>
                                    </div>
                                    <div class="flex flex-col">
                                        <span class="font-bold text-gray-900 dark:text-white">Sipariş #@order.Id</span>
                                        <span class="text-xs text-gray-500">@order.Date.ToString("dd.MM.yyyy HH:mm")</span>
                                    </div>
                                </div>

                                <div class="flex items-center gap-4">
                                    <div class="text-right hidden sm:block">
                                        <div class="font-bold text-primary">@order.TotalPrice.ToString("C2")</div>
                                        <span class="text-[10px] uppercase tracking-wider font-bold px-2 py-0.5 rounded-md @statusColor">
                                            @order.OrderStatus
                                        </span>
                                    </div>
                                    <span class="material-symbols-outlined text-gray-400 group-open:rotate-180 transition-transform duration-300">expand_more</span>
                                </div>
                            </summary>

                            <div class="p-5 pt-0 border-t border-gray-100 dark:border-gray-700 bg-gray-50/50 dark:bg-black/20">
                                <div class="mt-4 grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
                                    <div>
                                        <p class="text-gray-500 mb-1 font-semibold">Müşteri Bilgisi</p>
                                        <p class="text-gray-900 dark:text-white">@order.Customer</p>
                                        <p class="text-xs text-gray-400">ID: @order.CustomerId</p>
                                    </div>
                                    <div>
                                        <p class="text-gray-500 mb-1 font-semibold">Ürün Detayları</p>
                                        @if (order.OrderDetails != null && order.OrderDetails.Any())
                                        {
                                            <ul class="space-y-1">
                                                @foreach (var detail in order.OrderDetails)
                                                {
                                                    <li class="flex justify-between border-b border-gray-200 dark:border-gray-700 pb-1 last:border-0">
                                                        <span>Ürün #@detail.Product.Name</span>
                                                        <span class="font-bold">x @detail.Quantity</span>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="text-gray-400 italic">Detay bulunamadı.</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </details>
                    }
                }
                else
                {
                    <div class="text-center p-8 text-gray-500 bg-white dark:bg-card-dark rounded-2xl border border-dashed border-gray-300">
                        Henüz sipariş geçmişiniz yok.
                    </div>
                }
            </div>
        </section>

        <section>
            <div class="flex items-center justify-between mb-4 px-1">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white">Lezzetleri Keşfet</h2>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                @if (Model.ProductList != null && Model.ProductList.Any())
                {
                    @foreach (var product in Model.ProductList)
                    {
                        // Resim kontrolü (Null check)
                        var imgUrl = (product.ProductImages != null && product.ProductImages.Any())
                        ? product.ProductImages.First().ThumbnailUrl
                        : "https://placehold.co/400x400/png?text=No+Image";

                        <div class="group bg-white dark:bg-card-dark p-3 rounded-3xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-md transition-all">
                            <div class="aspect-square rounded-2xl bg-gray-100 overflow-hidden mb-3 relative">
                                <img src="@imgUrl" alt="@product.Name" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500" />

                                @if (product.Category != null)
                                {
                                    <span class="absolute top-2 left-2 bg-black/50 backdrop-blur-md text-white text-[10px] font-bold px-2 py-1 rounded-lg">
                                        @product.Category.Name
                                    </span>
                                }
                            </div>

                            <div class="px-1 flex flex-col gap-1">
                                <h3 class="font-bold text-gray-900 dark:text-white truncate" title="@product.Name">@product.Name</h3>
                                <p class="text-xs text-gray-500 truncate h-4">@product.Description</p>

                                <div class="flex items-center justify-between mt-2 pt-2 border-t border-gray-100 dark:border-gray-700">
                                    <span class="text-primary font-bold text-lg">@product.Price.ToString("C2")</span>
                                    <button class="size-8 rounded-full bg-primary text-white flex items-center justify-center hover:bg-primary/90 active:scale-90 transition-all shadow-sm shadow-primary/30">
                                        <span class="material-symbols-outlined text-[18px]">add</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-span-full text-center p-10 text-gray-500">
                        Listelenecek ürün bulunamadı.
                    </div>
                }
            </div>
        </section>
    </div>
</main>